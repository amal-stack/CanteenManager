@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<div class="card p-4 shadow border-radius-20px">
    <h1 class="fw-bold">Categories</h1>
    <hr />
    <p>
        <a asp-action="Create" class="btn btn-outline-dark my-2">Create New</a>
    </p>
    @foreach (var item in Model)
    {

        <div class="card border-radius-20px border-0 m-2 p-2 wg-warm-flame-001-gradient">
            <div class="card-body d-flex justify-content-between">
                <div>
                    <h3 class="fw-bold"><a asp-controller="FoodItems" class="text-reset text-decoration-none">@Html.DisplayFor(modelItem => item.Name)</a></h3>
                    <p class="text-muted">@Html.DisplayFor(modelItem => item.Description)</p>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn text-primary"><i class="fas fa-pen"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn text-danger"><i class="fas fa-times"></i></a>
                    <a asp-action="Create" asp-controller="FoodItems" asp-route-categoryId="@item.Id" class="btn text-dark"><i class="fas fa-plus"></i></a>
                </div>

            </div>
        </div>

    }

</div>